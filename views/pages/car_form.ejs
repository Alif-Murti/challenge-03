<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Car List</title>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.1/font/bootstrap-icons.css"
    />
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="wrapper">
      <%- include('../partials/sidebar.ejs');%>
      <div id="content">
        <%- include('../partials/navbar.ejs');%>
        <div class="container">
          <div class="row">
            <div class="col-10">
              <nav style="--bs-breadcrumb-divider: '>'" aria-label="breadcrumb">
                <ol class="breadcrumb">
                  <li class="breadcrumb-item fw-bold">
                    <a href="cars">Cars</a>
                  </li>
                  <li class="breadcrumb-item active" aria-current="page">
                    List Car
                  </li>
                </ol>
              </nav>

              <h5 class="fw-bold">Add New Car</h5>
            </div>
            <div class="col-auto"></div>
          </div>
          <div class="container form_bg">
            <form class="mt-4">
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Nama*</label
                  >
                </div>
                <div class="col-4">
                  <input
                    type="email"
                    id="inputPassword6"
                    class="form-control border-2 border-dark"
                    aria-describedby="passwordHelpInline"
                    placeholder="Placeholder"
                  />
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Harga*</label
                  >
                </div>
                <div class="col-4">
                  <input
                    type="email"
                    id="inputPassword6"
                    class="form-control border-2 border-dark"
                    aria-describedby="passwordHelpInline"
                    placeholder="Placeholder"
                  />
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Foto*</label
                  >
                </div>
                <div class="col-4">
                  <input
                    type="file"
                    id="inputPassword6"
                    class="form-control border-2 border-dark"
                    aria-describedby="passwordHelpInline"
                    placeholder="IMG/2/2022/001"
                  />
                  <span class="text-secondary fs-12">File size max 2MB</span>
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Start Rent</label
                  >
                </div>
                <div class="col-4">
                  <span><strong>-</strong></span>
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Finish Rent</label
                  >
                </div>
                <div class="col-4">
                  <span><strong>-</strong></span>
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Created at</label
                  >
                </div>
                <div class="col-4">
                  <span><strong>-</strong></span>
                </div>
              </div>
              <div class="row g-3 align-items-center mb-3">
                <div class="col-2">
                  <label for="inputPassword6" class="col-form-label"
                    >Updated at</label
                  >
                </div>
                <div class="col-4">
                  <span><strong>-</strong></span>
                </div>
              </div>
            </form>
          </div>
        </div>
        <div class="container mt-5">
          <button
            type="button"
            class="btn border-primary border-4 me-2 butt_form"
            style="width: 90px"
          >
            Cancel
          </button>
          <button
            type="button"
            class="btn btn-primary border-4 butt_form"
            style="width: 70px"
          >
            Save
          </button>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script src="./js/script.js"></script>
    <script>
      $(document).ready(function () {
        $("#example").DataTable();
      });
    </script>
    <script>
      $(document).ready(function () {
        $("#sidebarCollapse").on("click", function () {
          $("#sidebar").toggleClass("active");
        });
      });
    </script>
  </body>
</html>
